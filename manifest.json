{
  "name": "DistractionTube-Avoider",
  "description": "Blocks the \"Recommended for you\" related videos to stop you from getting distracted",
  "version": "2.0",
  "permissions": [
    "activeTab",
	"tabs",
	"http://*/*", 
	"https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myscripts.js"],
	  "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "blockthumbnail.png"
  ],
  "browser_action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}
