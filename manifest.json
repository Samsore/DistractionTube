{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
	"tabs",
	"http://*/*", 
	"https://*/*"
  ],
	"content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myscripts.js"]
    }
  ],
  "browser_action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}
