{
  "name": "DistractionTube-Avoider",
  "description": "Blocks the \"Recommended for you\" related videos to stop you from getting distracted",
  "version": "0.5",
  "permissions": [
    "activeTab",
	"tabs",
	"*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["blocker.js"],
	  "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "blockthumbnail.png",
	"blockthumbnail2.png"
  ],
  "browser_action": {
    "default_title": "Block Distracting Videos"
  },
  "manifest_version": 2
}
